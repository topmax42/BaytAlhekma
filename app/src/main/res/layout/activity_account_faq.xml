<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.myaccount.accountpages.AccountFAQ"
    android:orientation="vertical"
    android:paddingHorizontal="32dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="28dp">

        <TextView
            android:id="@+id/faqMyAccount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="حسابي"
            android:textColor="@color/text_black"
            android:textSize="18dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/faqSubMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/faqMyAccount"
            android:src="@drawable/angle_left_solid"
            android:layout_margin="5dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/faqSubMenu"
            android:gravity="center"
            android:text="الأسئلة الشائعة" />

        <ImageButton
            android:id="@+id/backAccountfaq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:backgroundTint="#80FFFFFF"
            android:backgroundTintMode="src_over"
            android:src="@drawable/angle_left_solid"
            android:gravity="center"
            />


    </RelativeLayout>




    <androidx.cardview.widget.CardView
        android:id="@+id/cardFAQ1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/box_fill"
        android:nextFocusDown="@id/cardFAQ2"
        android:clickable="true"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/lorem"
            android:layout_margin="10dp"
            android:id="@+id/faqTitle1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chevron_bottom_expand"
            android:id="@+id/arrowexpand1"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loremipsumext"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/faqBody1"
            android:layout_marginHorizontal="15dp"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFAQ2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/box_fill"
        android:nextFocusDown="@id/cardFAQ2"
        android:clickable="true"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/lorem"
            android:layout_margin="10dp"
            android:id="@+id/faqTitle2"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chevron_bottom_expand"
            android:id="@+id/arrowexpand2"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loremipsumext"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/faqBody2"
            android:layout_marginHorizontal="15dp"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFAQ3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/box_fill"
        android:nextFocusDown="@id/cardFAQ2"
        android:clickable="true"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/lorem"
            android:layout_margin="10dp"
            android:id="@+id/faqTitle3"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chevron_bottom_expand"
            android:id="@+id/arrowexpand3"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loremipsumext"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/faqBody3"
            android:layout_marginHorizontal="15dp"/>


    </androidx.cardview.widget.CardView>


</LinearLayout>