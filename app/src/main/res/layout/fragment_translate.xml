<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.translate.Translate"
    android:layout_marginTop="45dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="36dp"
        android:paddingBottom="50dp"
        android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ترجمة"
                android:textColor="@color/text_black"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:background="@drawable/btnlos2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl"
                        android:layout_margin="5dp"
                        android:gravity="center|start">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/group_43728"
                                android:text="ar"
                                android:layout_margin="2dp"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="العربية"
                                android:textSize="18dp"
                                android:textColor="@color/text_black"
                                android:layout_margin="2dp"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/arrow_right_arrow_left_solid"

                                android:layout_marginHorizontal="5dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/group_43730"
                                android:text="ch"
                                android:layout_margin="2dp"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="الصينية"
                                android:textSize="18dp"
                                android:textColor="@color/text_black"
                                android:layout_margin="2dp"/>

                    </LinearLayout>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:singleLine="false"
                        android:hint="اكتب النص المراد ترجمته هنا"
                        android:gravity="top|start"
                        style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

    </LinearLayout>


</FrameLayout>