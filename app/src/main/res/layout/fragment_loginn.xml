<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.controluser.LoginnFragment"
    android:orientation="vertical"
    android:paddingHorizontal="32dp"
    android:background="@color/white">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:srcCompat="@drawable/angle_left_solid"
        android:id="@+id/backLogin"
        android:backgroundTint="#80FFFFFF"
        android:backgroundTintMode="src_over"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="تسجيل الدخول"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="الايميل او رقم الهاتف"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/loginnNameValidation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="" />

    <EditText
        android:id="@+id/editTextEmailLoginn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="15dp"
        android:background="@drawable/btnlos2"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text=""
        android:layout_gravity="center_horizontal"

        android:layout_marginBottom="11dp"/>

    <TextView
        android:id="@+id/textViewLogin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="كلمة المرور"
        android:gravity="right"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="13dp"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/loginPassValidation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="" />

    <EditText
        android:id="@+id/editTextPasswordLoginn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="15dp"
        android:background="@drawable/btnlos2"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/forgotPW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="نسيت كلمة المرور"
        android:textColor="@color/colorPrimaryDark"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/login"
        android:background="@drawable/btnlos1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imageButtonLoginG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/google__g__logo_svg"
            android:backgroundTint="#80FFFFFF"
            android:backgroundTintMode="src_over"/>

        <ImageButton
            android:id="@+id/imageButtonLoginFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/facebookicon"
            android:backgroundTint="#80FFFFFF"
            android:backgroundTintMode="src_over"/>

        <ImageButton
            android:id="@+id/imageButtonLoginTw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/twitter_icon"
            android:backgroundTint="#80FFFFFF"
            android:backgroundTintMode="src_over"/>

        <ImageButton
            android:id="@+id/imageButtonLoginA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/apple_logo_e3dbf3ae34_seeklogo_com"
            android:backgroundTint="#80FFFFFF"
            android:backgroundTintMode="src_over"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/gotoRegistering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/register"
            android:background="@color/white"
            android:textColor="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/buttonHaveNotAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="ليس لديك حساب"
            android:background="@color/white"
            android:textColor="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</LinearLayout>